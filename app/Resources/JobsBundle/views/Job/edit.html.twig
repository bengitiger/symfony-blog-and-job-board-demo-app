{# app/Resources/JobsBundle/views/Job/layout.html.twig #}
{% extends 'JobsBundle::layout.html.twig' %}

{% form_theme edit_form _self %}

{% block field_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            <ul>
                {% for error in errors %}
                    <li>{{ error.messageTemplate|trans(error.messageParameters, 'validators') }}</li>
                {% endfor %}
            </ul>
        {% endif %}
    {% endspaceless %}
{% endblock field_errors %}

{% block stylesheets %}
    {{ parent() }}

{% endblock %}

{% block content %}
    <h1>Job edit</h1>
    <form class="job_form form-horizontal" action="{{ path('Sm_job_update', { 'token': entity.token }) }}" method="post" {{ form_enctype(edit_form) }}>
        <fieldset>
            <div class="form-group">
                {{ form_label(edit_form.category) }}
                <div class="col-sm-8">
                    {{ form_errors(edit_form.category) }}
                    {{ form_widget(edit_form.category) }}
                    <p class="help-block">Example block-level help text here.</p>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.type) }}
                <div class="col-sm-8">
                    {{ form_errors(edit_form.type) }}
                    {{ form_widget(edit_form.type) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.company) }}
                <div class="col-sm-8">
                    {{ form_errors(edit_form.company) }}
                    {{ form_widget(edit_form.company) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.file) }}
                <div class="col-sm-8">
                    {{ form_errors(edit_form.file) }}
                    {{ form_widget(edit_form.file) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.url) }}
                <div class="col-sm-8">
                    {{ form_errors(edit_form.url) }}
                    {{ form_widget(edit_form.url) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.position) }}
                <div class="col-sm-8">
                    {{ form_errors(edit_form.position) }}
                    {{ form_widget(edit_form.position) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.location) }}
                <div class="col-sm-8">
                    {{ form_errors(edit_form.location) }}
                    {{ form_widget(edit_form.location) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.description) }}
                <div class="col-sm-8">
                    {{ form_errors(edit_form.description) }}
                    {{ form_widget(edit_form.description) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.how_to_apply) }}
                <div class="col-sm-8">
                    {{ form_errors(edit_form.how_to_apply) }}
                    {{ form_widget(edit_form.how_to_apply) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.email) }}
                <div class="col-sm-8">
                    {{ form_errors(edit_form.email) }}
                    {{ form_widget(edit_form.email) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4">
                    {{ form_label(edit_form.is_public) }}
                </div>
                <div class="col-sm-8">
                    {{ form_errors(edit_form.is_public) }}
                    {{ form_widget(edit_form.is_public) }}         
                </div>
            </div>

            {{ form_rest(edit_form) }}

        </fieldset>

        <input type="submit" class="btn btn-info pull-right" value="Preview your job" />

    </form>

{% endblock %}
