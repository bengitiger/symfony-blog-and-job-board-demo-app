{# app/Resources/JobsBundle/views/Job/index.html.twig #}
{% extends 'JobsBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

{% endblock %}

{% block content %}
    <div id="jobs">
        {% for category in categories %}
            <div class="category_{{ category.slug }}">
                <div class="category">
                    <div class="feed">
                        <a href="">Feed</a>
                    </div>
                    <h1><a href="{{ path('SmJobsBundle_category', { 'slug': category.slug }) }}">{{ category.name }}</a></h1>
                </div>
                {% include 'JobsBundle:Job:list.html.twig' with {'jobs': category.activejobs} %}
                {% if category.morejobs %}
                    <div class="more_jobs">
                        and <a href="{{ path('SmJobsBundle_category', { 'slug': category.slug }) }}">{{ category.morejobs }}</a>
                        more...
                    </div>
                {% endif %}
            </div>
        {% endfor %}
    </div>
{% endblock %}
