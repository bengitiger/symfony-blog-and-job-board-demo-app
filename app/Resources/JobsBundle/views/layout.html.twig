{# app/Resources/JobsBundle/views/Job/layout.html.twig #}
{% extends 'base.html.twig' %}

{% block subtitle %}
    Jobs - Your best job board
{% endblock %}

{% block section_name %} Job Board{% endblock %}

{% block stylesheets %}
    {{ parent() }}

{% endblock %}

{% block body_class 'job-board-body' %}


{% block page_class %}
    {{ parent() }}
    job-board-page
{% endblock %}

{% block page_content %}
    <div class="main col-sm-8">
        {% block main %}
            <section class="job-search well well-lg">
                <form class="form-inline" role="search" action="" method="get">
                    <div class="form-group">
                        <input type="text" id="search_keywords" class="form-control" name="keywords" placeholder="Search Jobs"/>
                        <button type="submit" class="btn btn-success">
                            Submit
                        </button>
                        <div class="help">
                            Enter some keywords (city, country, position, ...)
                        </div>
                    </div>
                </form>
            </section>

            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="flash_notice">
                    {{ flashMessage }}
                </div>
            {% endfor %}

            {% block content %}
            {% endblock %}

            <section class="job-board-footer">
                <div class="content">
                    <ul class="small">
                        <li><a href="">About Jobeet</a></li>
                        <li class="feed"><a href="">Full feed</a></li>
                        <li><a href="">Jobeet API</a></li>
                        <li class="last"><a href="">Affiliates</a></li>
                    </ul>
                    <div class="symfony">
                        <img src="{{ asset('bundles/Jobs/images/jobeet-mini.png') }}" />
                        powered by
                        <a href="http://www.symfony.com/"><img src="{{ asset('bundles/Jobs/images/symfony.gif') }}" alt="symfony framework" /></a>
                    </div>
                </div>
            </section>

        {% endblock main %}
    </div> {# end main content #}

    <aside id="sidebar" class="col-sm-4">
        {% block sidebar %}
            <article class="well well-lg section about">
                <div class="post">
                    <h2>Find employees</h2>
                    <a class="btn btn-warning" href="{{ path('Sm_job_new') }}">Post a Job</a>
                </div>
            </article>
            <article class="well well-lg section about">
                <p>
                    This is a <strong>demo application</strong> built in the
                    Symfony Framework to illustrate the recommended way of
                    developing Symfony applications.
                </p>
                <p>
                    For more information, check out the
                    <a href="http://symfony.com/doc">Symfony Documentation</a>.
                </p>
            </article>
        {% endblock sidebar %}
    </aside>

{% endblock page_content %}

{% block footer %}
    {{ parent() }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}

